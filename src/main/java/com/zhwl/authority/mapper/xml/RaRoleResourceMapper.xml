  	from ts_resource in 
  (SELECT RR_RESOURCE_NO FROM RA_ROLE_RESOURCE WHERE RR_ROLE_NO IN 
  	<foreach collection="list" item="drRoleNo" index="index"
            open="(" close=")" separator=",">
            #{drRoleNo}
       </foreach> )
  </select>
